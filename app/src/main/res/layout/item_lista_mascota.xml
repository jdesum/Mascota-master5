<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvMascotas"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="290dp"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="@dimen/corner_radius"
    android:layout_marginTop="20dp"
    app:cardElevation="@dimen/elevation1">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/imagen_mascota">

            <ImageButton
                android:id="@+id/btnWhiteBoneLike"
                android:layout_width="@dimen/img_btn"
                android:layout_height="@dimen/img_btn"
                android:background="@mipmap/ic_white_bone"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/tvNombreMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin2"
                android:textSize="@dimen/text_size"
                android:text="Alfie" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvPuntuacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/btnYellowBone"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toLeftOf="@+id/btnYellowBone" />

        <ImageButton
            android:id="@+id/btnYellowBone"
            android:layout_width="@dimen/img_btn"
            android:layout_height="@dimen/img_btn"
            android:background="@mipmap/ic_yellow_bone"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imagen_mascota"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/alfie"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>